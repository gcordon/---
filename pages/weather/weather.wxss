#weather-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url('http://www.moepan.net/uploads/201803915045793451048.jpg');
    background-repeat: no-repeat;
    width: 100%;
    height: 1200rpx;
}
#w-title {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-weight: bold;
    background: #469;
}
#w-content {
    width: 100%;
    text-align: center;
    background-color: #169;
}
#w-content > view {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #fff;
}